@model moodi.ViewModels.AddDailyReportViewModel

<h1>New Daily Report</h1>

<form asp-controller="DailyReport" asp-action="Add" method="post">

        <div class="form-group">
            <label asp-for="Date"></label>
            <input class="form-control" asp-for="Date" />
            <span asp-validation-for="Date"></span>
        </div>

    <div class="form-group">
        <label asp-for="MoodID"></label>
        <select asp-for="MoodID" asp-items="Model.Moods"></select>
    </div>

    <input type="submit" value="Add report" />

</form>