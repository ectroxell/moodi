@model moodi.ViewModels.AddDailyReportViewModel

<h1>New Daily Report</h1>

<form asp-controller="DailyReport" asp-action="Add" method="post" id="dailyReportForm">

    <div class="form-group">
        <label asp-for="MoodID"></label>
        <select asp-for="MoodID" asp-items="Model.Moods"></select>
        <span asp-validation-for="MoodID"></span>
    </div>

    <div class="form-group">
        <label asp-for="JournalText"></label>
        <input class="form-control" asp-for="JournalText" />
    </div>

    <input type="submit" value="Save report" />

</form>


